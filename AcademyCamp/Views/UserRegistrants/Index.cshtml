@model IEnumerable<AcademyCamp.Models.Registrant>

@{
    ViewBag.Title = "My Camper Submissions";
}

<h2>My Campers</h2>

<p>
    @Html.ActionLink("Create New Camper", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        @Html.DropDownList("FilterString", (SelectList)ViewBag.EventList, "-- Filter by Event --", new { onchange = "this.form.submit();", @class = "form-control-sm", @style = "display:inline;" })
        @Html.TextBox("SearchString", null, new { @class = "form-control-sm", @style = "display:inline;" })
        <input type="submit" value="Search" class="btn btn-sm" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Event", "Index", new { sortOrder = ViewBag.EventSort })
        </th>
        <th>
            @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.FNameSort })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LNameSort })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSort })
        </th>
        <th>
            @Html.ActionLink("Age", "Index", new { sortOrder = ViewBag.AgeSort })
        </th>
        <th>
            @Html.ActionLink("Gender", "Index", new { sortOrder = ViewBag.GenderSort })
        </th>
        <th>
            @Html.ActionLink("T-Size", "Index", new { sortOrder = ViewBag.TsizeSort })
        </th>
        <th>
            @Html.ActionLink("Workshop", "Index", new { sortOrder = ViewBag.WorkshopSort })
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tsize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Workshop)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
